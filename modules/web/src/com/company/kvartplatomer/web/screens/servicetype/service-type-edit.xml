<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://serviceTypeEdit.caption"
        focusComponent="form"
        messagesPack="com.company.kvartplatomer.web.screens.servicetype">
    <data>
        <instance id="serviceTypeDc"
                  class="com.company.kvartplatomer.entity.ServiceType">
            <view extends="_local"/>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="serviceTypeDc">
            <column width="350px">
                <textField id="stypeNameField" property="stypeName"/>
                <textField id="shortNameField" property="shortName"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
