<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://serviceAccountBrowse.caption"
        focusComponent="serviceAccountsTable"
        messagesPack="com.company.kvartplatomer.web.screens.serviceaccount">
    <data readOnly="true">
        <collection id="serviceAccountsDc"
                    class="com.company.kvartplatomer.entity.ServiceAccount">
            <view extends="_local">
                <property name="accountedObject" view="_minimal"/>
                <property name="organization" view="_minimal">
                <property name="inn"/>
                <property name="url"/>
                </property>
            </view>
            <loader id="serviceAccountsDl">
                <query>
                    <![CDATA[select e from kvartplatomer_ServiceAccount e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="serviceAccountsTable"
            spacing="true">
        <filter id="filter"
                applyTo="serviceAccountsTable"
                dataLoader="serviceAccountsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="serviceAccountsTable"
                    width="100%"
                    dataContainer="serviceAccountsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="accountedObject"/>
                <column id="organization"/>
                <column id="accountNumber"/>
                <column id="login"/>
                <column id="password"/>
                <column id="autopay"/>
                <column id="isActive"/>
                <column id="organization.inn"/>
                <column id="organization.url"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="serviceAccountsTable.create"/>
                <button id="editBtn" action="serviceAccountsTable.edit"/>
                <button id="removeBtn" action="serviceAccountsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
