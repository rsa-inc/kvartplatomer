<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://serviceAccountEdit.caption"
        focusComponent="form"
        messagesPack="com.company.kvartplatomer.web.screens.serviceaccount">
    <data>
        <instance id="serviceAccountDc"
                  class="com.company.kvartplatomer.entity.ServiceAccount">
            <view extends="_local">
                <property name="accountedObject" view="_minimal"/>
                <property name="organization" view="_minimal"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="serviceAccountDc">
            <column width="350px">
                <pickerField id="accountedObjectField" property="accountedObject">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <pickerField id="organizationField" property="organization">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="accountNumberField" property="accountNumber"/>
                <textField id="loginField" property="login"/>
                <textField id="passwordField" property="password"/>
                <checkBox id="autopayField" property="autopay"/>
                <checkBox id="isActiveField" property="isActive"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
