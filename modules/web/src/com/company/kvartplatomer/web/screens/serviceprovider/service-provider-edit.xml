<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://serviceProviderEdit.caption"
        focusComponent="form"
        messagesPack="com.company.kvartplatomer.web.screens.serviceprovider">
    <data>
        <instance id="serviceProviderDc"
                  class="com.company.kvartplatomer.entity.ServiceProvider">
            <view extends="_local">
                <property name="serviceType" view="_minimal">
                    <property name="stypeName"/>
                </property>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="serviceProviderDc">
            <column width="350px">
                <textField id="nameField" property="name"/>
                <pickerField id="serviceTypeField" property="serviceType">
                    <actions>
                        <action id="lookup" type="picker_lookup"/>
                        <action id="clear" type="picker_clear"/>
                    </actions>
                </pickerField>
                <textField id="pcField" property="pc"/>
                <textField id="innField" property="inn"/>
                <textField id="urlField" property="url"/>
                <textField id="descriptionField" property="description"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
