<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        xmlns:c="http://schemas.haulmont.com/cuba/screen/jpql_condition.xsd"
        caption="msg://serviceTypeBrowse.caption"
        focusComponent="serviceTypesTable"
        messagesPack="com.company.kvartplatomer.web.screens.servicetype">
    <data readOnly="true">
        <collection id="serviceTypesDc"
                    class="com.company.kvartplatomer.entity.ServiceType">
            <view extends="_local"/>
            <loader id="serviceTypesDl">
                <query>
                    <![CDATA[select e from kvartplatomer_ServiceType e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="serviceTypesTable"
            spacing="true">
        <groupTable id="serviceTypesTable"
                    width="100%"
                    dataContainer="serviceTypesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="stypeName"/>
                <column id="shortName"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="serviceTypesTable.create"/>
                <button id="editBtn" action="serviceTypesTable.edit"/>
                <button id="removeBtn" action="serviceTypesTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
